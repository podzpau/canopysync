<div class="py-16 px-4 bg-gray-100">
  <h2 class="text-xl md:text-2xl lg:text-3xl font-bold mb-8 md:mb-12 text-center">
    <%= config['heading'] || 'Featured Brands' %>
  </h2>
  <div class="grid gap-2 max-w-6xl mx-auto" style="grid-template-columns: repeat(3, 1fr);">
    <% 6.times do %>
      <div class="aspect-square bg-white rounded-lg flex items-center justify-center p-1 hover:shadow-lg transition-shadow">
        <div class="text-gray-400 font-medium text-[8px] md:text-[10px] lg:text-sm text-center">BRAND</div>
      </div>
    <% end %>
  </div>
  <div class="text-center mt-8">
    <button class="px-4 md:px-6 py-2 border-2 border-gray-400 text-gray-600 rounded-lg hover:bg-gray-200 transition-colors font-medium text-xs md:text-sm">
      View All Brands
    </button>
  </div>
</div>