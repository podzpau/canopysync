<div class="p-8">
  <div class="max-w-sm mx-auto bg-white border rounded-lg overflow-hidden shadow-lg">
    <% if config['image_url'].present? %>
      <img src="<%= config['image_url'] %>" class="w-full h-48 object-cover" alt="">
    <% else %>
      <div class="w-full h-48 bg-primary-light"></div>
    <% end %>
    <div class="p-4">
      <h3 class="font-bold text-lg mb-2"><%= config['heading'] || 'Product Name' %></h3>
      <p class="text-gray-600 text-sm mb-3"><%= config['description'] || 'Product description' %></p>
      <div class="flex justify-between items-center">
        <span class="text-2xl font-bold text-primary"><%= config['price'] || '$0.00' %></span>
        <button class="btn-primary px-4 py-2 rounded-lg">Add to Cart</button>
      </div>
    </div>
  </div>
</div>