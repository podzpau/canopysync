<div class="hero relative py-20 px-4 bg-primary overflow-hidden">
  <% if config['image_url'].present? %>
    <div class="absolute inset-0 opacity-20">
      <img src="<%= config['image_url'] %>" class="w-full h-full object-cover" alt="">
    </div>
  <% end %>
  
  <div class="relative max-w-4xl mx-auto text-center">
    <h1 class="text-5xl font-bold mb-4 text-on-primary"><%= config['heading'] %></h1>
    <p class="text-xl mb-8 text-on-primary opacity-90"><%= config['subheading'] %></p>
    
    <% if config['button_text'].present? %>
      <%= link_to config['button_text'], config['button_url'] || '#', 
          class: "inline-block px-8 py-4 bg-secondary text-on-secondary rounded-lg font-semibold hover:bg-secondary-dark transition-colors" %>
    <% end %>
  </div>
</div>